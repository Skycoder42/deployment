{
	"name": "qpmx",
	"buildsystem": "qmake",
	"make-install-args": ["INSTALL_ROOT=/app/qpmx"],
	"depends": [
		"qtjsonserializer",
		"qpm"
	],
	"sources": [
		{
			"type": "git",
			"url": "https://github.com/Skycoder42/qpmx.git",
			"tag": "1.5.0"
		},
		{
			"type": "patch",
			"path": "qpmx.patch",
			"use-git": true
		},
		{
			"type": "file",
			"path": "qpmx.qt.conf"
		}
	],
	"cleanup": [
		"/qpmx",
		"/bin"
	],
	"post-install": [
		"mv qpmx.qt.conf /app/qpmx/usr/bin/qt.conf",
		"mkdir -p /app/bin",
		"ln -s /app/qpmx/usr/bin/qpmx /app/bin/qpmx"
	]
}
